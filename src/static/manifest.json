{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Clientar CRM Extension",
  "description": "Extens√£o da Clientar CRM para o Chrome",
  "homepage_url": "https://www.clientarcrm.com.br/",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "action": {
    "default_title": "Clientar", 
    "default_popup": "index.html",
    "default_icon": "src/assets/icon_128.png"
   },
   "icons": {
    "16": "src/assets/icon_128.png",
    "32": "src/assets/icon_128.png",
    "48": "src/assets/icon_128.png",
    "128": "src/assets/icon_128.png"
  },
  "content_scripts": [
    {
      "run_at" : "document_end",
      "matches": ["https://web.whatsapp.com/"],
      "js": ["src/content/constructorContent.js"]
    }
  ]
}