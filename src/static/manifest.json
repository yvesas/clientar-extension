{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Clientar CRM Extension",
  "description": "Extens√£o da Clientar CRM para o Chrome",
  "homepage_url": "https://www.clientarcrm.com.br/",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "action": {
    "default_title": "Clientar", 
    "default_popup": "index.html",
    "default_icon": "src/assets/clientar_icon.png"
   },
  "content_scripts": [
    {
      "run_at" : "document_end",
      "matches": ["https://www.google.com/*", "https://www.whatsapp.com/*"],
      "js": ["src/content/google.tsx"]
    }
  ]
}